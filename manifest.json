{
  "manifest_version": 3,
  "name": "Supermarket Unit Value",
  "version": "1.4.2",
  "description": "Adds a 'Value' sort option to UK supermarket sites, sorting products by unit price. Supports Tesco, Sainsbury's & Waitrose.",
  "homepage_url": "https://github.com/mcsdevv/supermarket-unit-value",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.tesco.com/groceries/*"],
      "js": ["tesco-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.sainsburys.co.uk/gol-ui/groceries/*",
        "https://www.sainsburys.co.uk/gol-ui/SearchResults/*"
      ],
      "js": ["sainsburys-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.waitrose.com/ecom/shop/*"],
      "js": ["waitrose-content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+V"
      },
      "description": "Open Unit Value settings"
    }
  }
}
