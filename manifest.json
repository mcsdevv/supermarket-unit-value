{
  "manifest_version": 3,
  "name": "Tesco Value Sort",
  "version": "1.0.0",
  "description": "Adds a 'Value' sort option to Tesco Groceries that sorts products by unit price (lowest first).",
  "content_scripts": [
    {
      "matches": ["https://www.tesco.com/groceries/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
