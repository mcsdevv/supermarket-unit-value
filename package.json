{
  "name": "supermarket-value-sort",
  "private": true,
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:prod": "node esbuild.config.mjs --prod",
    "build:watch": "node esbuild.config.mjs --watch",
    "typecheck": "tsc --noEmit",
    "test": "bun run build && node --test tests/*.test.js",
    "test:tesco": "bun run build && node --test tests/content.test.js",
    "test:sainsburys": "bun run build && node --test tests/sainsburys-content.test.js",
    "test:morrisons": "bun run build && node --test tests/morrisons-content.test.js",
    "test:waitrose": "bun run build && node --test tests/waitrose.test.js",
    "package": "bun run build:prod && cd dist && zip -r ../supermarket-value-sort.zip .",
    "lint": "oxlint src/*.ts tests/ esbuild.config.mjs",
    "lint:fix": "oxlint --fix src/*.ts tests/ esbuild.config.mjs",
    "format": "oxfmt .",
    "format:check": "oxfmt --check",
    "check": "bun run typecheck && bun run lint && bun run format:check",
    "prepare": "git config core.hooksPath .githooks"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "jsdom": "^24.1.3",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "typescript": "^5.7.0"
  }
}
