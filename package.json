{
  "name": "supermarket-value-sort",
  "private": true,
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:prod": "node esbuild.config.mjs --prod",
    "build:watch": "node esbuild.config.mjs --watch",
    "typecheck": "tsc --noEmit",
    "test": "npm run build && node --test 'tests/*.test.js'",
    "test:tesco": "npm run build && node --test tests/content.test.js",
    "test:sainsburys": "npm run build && node --test tests/sainsburys-content.test.js",
    "package": "npm run build:prod && cd dist && zip -r ../supermarket-value-sort.zip .",
    "lint": "oxlint src/ tests/ esbuild.config.mjs",
    "lint:fix": "oxlint --fix src/ tests/ esbuild.config.mjs",
    "format": "oxfmt .",
    "format:check": "oxfmt --check",
    "check": "npm run typecheck && npm run lint && npm run format:check"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "jsdom": "^24.1.3",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "typescript": "^5.7.0"
  }
}
